<%- include('nav', { title: "Register", description: "Register your account for the Ohio Chess Club." }) %>
<body class="bg-white">
  <div class="text-center" id="register">
    <% if (typeof actionError !== 'undefined' && actionError !== null) { %>
      <a href="#" style="color: red;">ERROR: <%- actionError -%></a>
    <% } %>
  <h1 class="subtitle">Forgot your password? Submit this form.</h1>
  <form action="/forgotpassword" method="POST" class="login-form">
      <input type="text" name="email" placeholder="Email" class="login-input" /><br />
      <button type="submit" class="button-texture button-purple-color buttonpurple-hover-effect">Submit</button>
    </form>
    <a href="/login">Go back to login</a>
</div>
</body>