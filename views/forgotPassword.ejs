   <%- include('nav', {title, description, accountInfo, canonicalUrl }) %>

<body class="bg-white">
    <div class="text-center" id="login">
      <% if (typeof actionError !== 'undefined' && actionError !== null) { %>
        <a href="#" style="color: red;">ERROR: <%- actionError -%></a>
      <% } %>
      <% if (typeof actionSuccess !== 'undefined' && actionSuccess !== null) { %>
        <a href="#" style="color: green;">SUCCESS: <%- actionSuccess -%></a>
      <% } %>
      <h1 class="subtitle">Forgot your Password?</h1>
      <p>No problem, just submit the form below</p>
      <form action="/forgotpasswordpost" method="POST" class="login-form">
        <input type="text" name="email" placeholder="Email" class="login-input" /><br />
        <button type="submit" class="button-texture button-purple-color buttonpurple-hover-effect">Get a Link to Your Email</button>
      </form>
      <a href="/login">Back to Login</a>
    </div>
  </body>
  