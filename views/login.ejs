<%- include('nav', {title, description, accountInfo }) %>

<body class="bg-white">
    <div class="text-center" id="login">
      <% if (typeof actionError !== 'undefined' && actionError !== null) { %>
        <a href="#" style="color: red;">ERROR: <%- actionError -%></a>
      <% } %>
      <% if (typeof actionSuccess !== 'undefined' && actionSuccess !== null) { %>
        <a href="#" style="color: green;">SUCCESS: <%- actionSuccess -%></a>
      <% } %>
      <h1 class="subtitle">Login</h1>
      <a href="/register">Don't have an account? Register</a><br><br>
      <form action="/login" method="POST" class="login-form">
        <input type="text" name="email" placeholder="Email" class="login-input" /><br />
        <input type="password" name="password" placeholder="Password" class="login-input" /><br />
        <button type="submit" class="button-texture button-purple-color buttonpurple-hover-effect">Log In</button>
      </form>
      <a href="/forgot-password">Forgot password</a>
    </div>
  </body>
 